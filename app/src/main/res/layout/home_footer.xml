<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_home_footer_main"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorPrimary"
    >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:padding="20dp"
        >

        <TextView
            android:id="@+id/tv_home_footer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assassins Creed Lineage"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_home_footer_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Action | Adventure | Drama"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:layout_below="@+id/tv_home_footer_title"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center"
        >

        <FrameLayout
            android:id="@+id/frame_home_footer_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_bg"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_play"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>